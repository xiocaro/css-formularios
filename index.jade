        .form_control
          label(for="txtName") Nombre
          input(type="text", name="txtName", id="txtName", placeholder="Ingrese su Nombre")
        .form_control
          label(for="txtLastName") Apellidos
          input(type="text", name="txtLastName", id="txtLastName", placeholder="Ingrese sus Apellidos")
        .form_control
          label Género
          .iopinline
            label.ioption(for="radGener1")
              input(id="radGener1", name="radGener", type="radio")
              | Masculino
            label.ioption(for="radGener2")
              input(id="radGener2", name="radGener", type="radio")
              | Femenino
        .form_control
          label(for="txtEmail") Email
          input(type="email", name="txtEmail", id="txtEmail", placeholder="Ingrese su Correo Electrónico")
        .form_control
          label(for="txtDni") DNI
          input(type="tel", name="txtDni", id="txtDni", placeholder="Ingrese su número de DNI")
        .form_control
          label(for="txtMessage") Comentario
          textarea(id="txtMessage", name="txtMessage", type="textarea", placeholder="Escríbenos tus comentarios...")
        .form_control
          label.ioption.ck
